<section class="products">
    <div class="new_product_button">
      <button><%= link_to("New Product", new_product_url) %></button>
    </div>

  <% @products.each do |product| %>
    <div class="product-card">
      <ul>
        <li>
          <h2><%= link_to(product.name, product_url(product)) %></h2>
        </li>
        <li>
          <div class="picture">
            <%= link_to(image_tag(product.url), product_url(product)) %>
          </div>
        </li>
        <li>
          <h3><%= number_to_currency(product.price_in_cents/100) %></h3>
        </li>
        <li>
          <p>"<%= product.description %>"</p>
        </li>
      </ul>
    </div>
  <% end %>

</section>
