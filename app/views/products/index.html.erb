<h1>Products!</h1>
<% @products.each do |product| %>
<ul>
  <li>
    <%= link_to(product.name, product_url(product)) %>
  </li>
  <li>
    <%= link_to(image_tag(product.url, class: "picture"), product_url(product)) %>
  </li>
  <li>
    <%= product.price_in_cents %>
  </li>
  <li>
    <%= product.description %>
  </li>
</ul>
<% end %>
